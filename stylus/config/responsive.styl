@media only screen and (max-width: 1273px) {

	.page-title {
		font-size: 4rem;
	}

	.box.playground-item {
		width: 49%;
	}

	.box {
		margin-right: 1%;
		width: 49%;
		box-sizing(border-box);

		&.featured-box {
			width: 100%;

			.figure-box {
				max-width: 40%;
			}
		}

		.read-more {
			position: relative;
			text-align: right;
			margin-top: 1rem;
			bottom: 0;
		}
	}

	.box.medium-content:nth-child(3n+4) {
		clear: none;
	}

	.box.medium-content:nth-child(2n+1){
		clear: both;
	}

	.box.medium-content:nth-of-type(2n+2){
		margin-right:0;
	}

	.box.medium-content:nth-of-type(3n+3){
		margin-right: 1%;
	}
}

@media only screen and (max-width: 740px) {
	.featured-box figcaption {
		overflow: initial
	}

	.box {
		&.featured-box {
			.figure-box {
				max-width: 100%;
				width: 100%;
			}
		}

		img {
			margin-bottom: 2rem;
		}

		width: 100%!important;
	}

	.btn-row .btn:first-child {
		margin-bottom: 2rem;
	}
}


@media only screen and (max-width: 600px) {
	.header-site-title {
		padding-top: 8rem;
	}

	#navigation-action:checked ~ div #navigation-list {
		height: 17rem;
		padding-top: 6rem;
	}

	.playground-item .image-box {
		float: none;
		width: 100%;
	}

	#navigation-action:checked ~ div #navigation-list li {
		float: none;
		margin: 1.6rem 4.4rem 0;

		i {
			display: inline;
		}
	}
}